@page
@model ModificaProdottoModel
@{
    ViewData["Title"] = "Modifica Prodotto";
}

<div>
    <form method="post">
        <div class="form-group">
            <label for="Nome">Nome</label>
            <input type="text" class="form-control" name="nome" value="@Model.Prodotto.Nome">
        </div>
        <div class="form-group">
            <label for="Prezzo">Prezzo</label>
            <input type="text" class="form-control" name="prezzo" value="@Model.Prodotto.Prezzo">
        </div>
        <div class="form-group">
            <label for="Dettaglio">Dettaglio</label>
            <input type="text" class="form-control" name="dettaglio" value="@Model.Prodotto.Dettaglio">
        </div>
        <div class="form-group">
            <label for="Dettaglio">Immagine</label>
            <input type="text" class="form-control" name="immagine" value="@Model.Prodotto.Immagine">
        </div>

         <select name="categoria" class="form-control"
        <option value="--- Seleziona Categoria ---"></option>
        @foreach (var categoria in Model.Categorie)
        {
            <option value="@categoria">@categoria</option>
        }
        </select>

        
        <button type="submit" class="btn btn-primary">Modifica</button>
    </form>
    <form method="get">
        <h1>@TempData["Messaggio"]</h1>
    </form>
</div>