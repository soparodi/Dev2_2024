@page
@model Modifica
@namespace _04_webapp_sqlite.Prodotti
@{
    ViewData["Title"] = "Modifica Prodotto";
}
<h1>@ViewData["Title"]</h1>


<div class="container">
    @section Scripts
    {
        <partial name="_ValidationScriptsPartial" />
    }
    <form method="post">
        <input type="hidden" asp-for="Prodotto.Id"> <!-- rimandargli indietro -->
        <div class="form-control">
            <label asp-for="Prodotto.Nome">Nome</label>
            <input type="text" class="form-control" asp-for="Prodotto.Nome" />
            <span asp-validation-for="Prodotto.Nome" class="text-danger"></span>
        </div>
        <div class="form-control">
            <label asp-for="Prodotto.Prezzo">Prezzo</label>
            <input type="number" class="form-control" asp-for="Prodotto.Prezzo" />
            <span asp-validation-for="Prodotto.Prezzo" class="text-danger"></span>
        </div>
        <div class="form-control">
            <label asp-for="Prodotto.CategoriaId">Categoria</label>
            <div>
                <select asp-for="Prodotto.CategoriaId" class="form-control" asp-items="Model.CategoriaSelectList">
                    <option value="">--- SELEZIONA CATEGORIA ---</option>
                </select>
                <span asp-validation-for="Prodotto.CategoriaId" class="text-danger"></span>
            </div>
            <label asp-for="Prodotto.CategoriaId">Categoria</label>
            <div>
                <select asp-for="Prodotto.FornitoreId" class="form-control" asp-items="Model.FornitoriSelectList">
                    <option value="">--- SELEZIONA FORNITORE ---</option>
                </select>
                <span asp-validation-for="Prodotto.FornitoreId" class="text-danger"></span>
            </div>
        </div>
        <div>
            <button type="submit" class="btn btn-primary my-3">Aggingi</button>
            <a asp-page="/Prodotti/Index"><button class="btn btn-primary my-3">Indietro</button></a>
        </div>
    </form>
</div>